{
	"fileTypes": [
		"epl",
		"mon",
		"evt"
	],
	"name": "apamaepl",
	"patterns": [
		{
			"include": "#main"
		}
	],
	"scopeName": "source.epl",
	"uuid": "",
	"repository": {
		"main": {
			"patterns": [
				{
					"include": "#using"
				},
				{
					"include": "#event"
				},
				{
					"include": "#monitor"
				},
				{
					"include": "#specialaction"
				},
				{
					"include": "#array"
				},
				{
					"include": "#action"
				},
				{
					"include": "#while_loop"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#string"
				},
				{
					"include": "#assignment"
				},
				{
					"include": "#punctuation"
				},
				{
					"include": "#constants"
				},
				{
					"include": "#types"
				},
				{
					"include": "#containertypes"
				},
				{
					"include": "#numeric"
				},
				{
					"include": "#member"
				},
				{
					"include": "#method"
				},
				{
					"include": "#keywords"
				},

				{
					"include": "#bareVariable"
				}
			]
		},
		"specialaction": {
			"patterns": [
				{
					"match": "(\\s?)(action)(\\s+)(onload|ondie|onunload|onBeginRecovery|onConcludeRecovery)(\\s?)",
					"captures": {
						"1": {
							"name": "text.epl"
						},
						"2": {
							"name": "entity.name.type.epl"
						},
						"3": {
							"name": "text.epl"
						},
						"4": {
							"name": "keyword.epl"
						},
						"5": {
							"name": "text.epl"
						}
					}
				}
			]
		},
		"action": {
			"patterns": [
				{
					"match": "(\\s?)(action)(\\s+)([a-zA-Z_$][a-zA-Z_$0-9]*)(\\s?)",
					"captures": {
						"1": {
							"name": "text.epl"
						},
						"2": {
							"name": "entity.name.type.epl"
						},
						"3": {
							"name": "text.epl"
						},
						"4": {
							"name": "variable.epl"
						},
						"5": {
							"name": "text.epl"
						}
					}
				}
			]
		},
		"array": {
			"patterns": [
				{
					"begin": "(\\[)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.epl"
						}
					},
					"patterns": [
						{
							"include": "#uid_array"
						}
					],
					"end": "(\\])",
					"endCaptures": {
						"1": {
							"name": "punctuation.epl"
						}
					}
				}
			]
		},
		"assignment": {
			"patterns": [
				{
					"match": "([a-zA-Z_$][a-zA-Z_$0-9]*)(\\s?)(\\:=)",
					"captures": {
						"1": {
							"name": "variable.epl"
						},
						"2": {
							"name": "text.epl"
						},
						"3": {
							"name": "keyword.operator.epl"
						}
					}
				}
			]
		},
		"bareVariable": {
			"patterns": [
				{
					"match": "\\b([a-zA-Z_$][a-zA-Z_$0-9]*)\\b",
					"name": "variable.epl"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"match": "(//.*)",
					"name": "comment.line.epl"
				},
				{
					"begin": "(/\\*)",
					"beginCaptures": {
						"1": {
							"name": "comment.block.epl"
						}
					},
					"contentName": "comment.block.epl",
					"end": "(.*?\\*/)",
					"endCaptures": {
						"1": {
							"name": "comment.block.epl"
						}
					}
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"match": "(\\b)(true|false|INFO|DEBUG|WARN|ERROR)(\\b)",
					"name": "constant.language.epl"
				}
			]
		},
		"containertypes": {
			"patterns": [
				{
					"match": "(sequence|optional|dictionary|stream)",
					"name": "entity.name.type.epl"
				},
				{
					"begin": "(\\<)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.epl"
						}
					},
					"patterns": [
						{
							"include": "#uid_containertypes_param"
						}
					],
					"end": "(\\>)",
					"endCaptures": {
						"1": {
							"name": "punctuation.epl"
						}
					}
				}
			]
		},
		"event": {
			"patterns": [
				{
					"match": "(\\s?)(event)(\\s+)([a-zA-Z_$][a-zA-Z_$0-9]*)",
					"captures": {
						"1": {
							"name": "text.epl"
						},
						"2": {
							"name": "entity.name.type.epl"
						},
						"3": {
							"name": "text.epl"
						},
						"4": {
							"name": "variable.epl"
						}
					}
				}
			]
		},
		"inside_quotes": {
			"patterns": [
				{
					"match": "(\\\\(?:\\\\|\"))",
					"name": "string.quoted.other.epl"
				},
				{
					"match": "([^\\x{0022}\\x{005c}]+)",
					"name": "string.quoted.epl"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"match": "(\\b)(action|aggregate|all|and|any|as|at|boolean|bounded|break|by|case|catch|completed|constant|continue|currentTime|decimal|default|dictionary|die|else|emit|enqueue|equals|event|every|false|float|for|from|group|having|if|ifpresent|import|in|integer|join|log|monitor|new|not|on|optional|or|package|partition|persistent|print|retain|return|returns|route|rstream|select|send|sequence|spawn|static|stream|string|switch|then|throw|to|true|try|unbounded|unique|unmatched|using|wait|where|while|wildcard|with|within|xor)(\\b)",
					"name": "keyword.epl"
				}
			]
		},
		"member": {
			"patterns": [
				{
					"match": "\\b(\\.)([a-zA-Z_$][a-zA-Z_$0-9]*)\\b",
					"captures": {
						"1": {
							"name": "keyword.operator.epl"
						},
						"2": {
							"name": "variable.epl"
						}
					}
				}
			]
		},
		"method": {
			"patterns": [
				{
					"match": "(\\.)([a-zA-Z_$][a-zA-Z_$0-9]*)(\\s?)(\\()",
					"captures": {
						"1": {
							"name": "keyword.operator.epl"
						},
						"2": {
							"name": "entity.name.function.epl"
						},
						"3": {
							"name": "text.epl"
						},
						"4": {
							"name": "punctuation.epl"
						}
					}
				}
			]
		},
		"monitor": {
			"patterns": [
				{
					"match": "(\\s?)(monitor)(\\s+)([a-zA-Z_$][a-zA-Z_$0-9]*)",
					"captures": {
						"1": {
							"name": "text.epl"
						},
						"2": {
							"name": "entity.name.type.epl"
						},
						"3": {
							"name": "text.epl"
						},
						"4": {
							"name": "variable.epl"
						}
					}
				}
			]
		},
		"numeric": {
			"patterns": [
				{
					"match": "(\\b)([-\\x{002b}]?[0-9]*\\.?[0-9]+([eE][-\\x{002b}]?[0-9]+)?([df])?)(\\b)",
					"name": "constant.numeric.epl"
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"match": "(\\+|\\-|\\*|=|,|>|<|;|\\s)",
					"name": "keyword.operator.epl"
				}
			]
		},
		"string": {
			"patterns": [
				{
					"begin": "(\")",
					"beginCaptures": {
						"1": {
							"name": "punctuation.epl"
						}
					},
					"patterns": [
						{
							"include": "#inside_quotes"
						}
					],
					"end": "(\")",
					"endCaptures": {
						"1": {
							"name": "punctuation.epl"
						}
					}
				}
			]
		},
		"types": {
			"patterns": [
				{
					"match": "(\\b)(decimal|float|integer|string|boolean|any|listener|channel|context|returns)(\\b)",
					"captures": {
						"1": {
							"name": "text.epl"
						},
						"2": {
							"name": "entity.name.type.epl"
						},
						"3": {
							"name": "text.epl"
						}
					}
				}
			]
		},
		"uid_array": {
			"patterns": [
				{
					"include": "#string"
				},
				{
					"include": "#punctuation"
				},
				{
					"include": "#constants"
				},
				{
					"include": "#numeric"
				}
			]
		},
		"uid_comments_block": {
			"patterns": []
		},
		"uid_containertypes_param": {
			"patterns": [
				{
					"include": "#containertypes"
				},
				{
					"match": "(decimal|float|integer|string|boolean|any|listener|channel|context)",
					"name": "entity.name.type.epl"
				}
			]
		},
		"using": {
			"patterns": [
				{
					"match": "(using|package)(\\s+)([a-zA-Z_$][a-zA-Z_$0-9.]*)(;)",
					"captures": {
						"1": {
							"name": "keyword.epl"
						},
						"2": {
							"name": "text.epl"
						},
						"3": {
							"name": "variable.epl"
						},
						"4": {
							"name": "text.epl"
						}
					}
				}
			]
		},
		"while_loop": {
			"patterns": [
				{
					"match": "(\\s?)(while)(\\s?)",
					"captures": {
						"1": {
							"name": "text.epl"
						},
						"2": {
							"name": "keyword.epl"
						},
						"3": {
							"name": "text.epl"
						}
					}
				}
			]
		}
	}
}