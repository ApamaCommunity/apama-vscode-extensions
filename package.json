{
  "name": "epl-syntax-highlighting",
  "displayName": "epl-syntax-highlighting",
  "description": "EPL language support for Apama",
  "version": "0.0.4",
  "publisher": "CaribouJohn",
  "repository": {
    "url": "https://github.com/CaribouJohn/epl-syntax-highlighting"
  },
  "engines": {
    "vscode": "^1.24.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "epl",
        "aliases": [
          "epl",
          "epl"
        ],
        "extensions": [
          ".mon",
          ".evt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "epl",
        "scopeName": "source.epl",
        "path": "./syntaxes/epl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "epl",
        "path": "./snippets/epl.jsonc"
      }
    ]
  }
}
