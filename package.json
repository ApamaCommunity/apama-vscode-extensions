{
  "name": "apama-extensions",
  "displayName": "Apama Extensions",
  "description": "EPL language support for Apama",
  "version": "0.0.6",
  "publisher": "CaribouJohn",
  "repository": {
    "url": "https://github.com/CaribouJohn/vscode-apama-extensions"
  },
  "engines": {
    "vscode": "^1.24.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "epl",
        "aliases": [
          "epl",
          "epl"
        ],
        "extensions": [
          ".mon",
          ".evt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "epl",
        "scopeName": "source.epl",
        "path": "./syntaxes/epl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "epl",
        "path": "./snippets/epl.jsonc"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Apama configuration",
      "properties": {
        "apama.apamaHome": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "The Apama install directory."
        }
      }
    },
    "debuggers": [
      {
        "type": "apama",
        "label": "Apama",
        "configurationAttributes": {
          "launch": {
            "required": [
              "correlatorArgs"
            ],
            "properties": {
              "correlatorArgs": {
                "type": "array",
                "description": "List of arguments and values to provide to the correlator",
                "default": [
                  "-v",
                  "INFO"
                ]
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "vscode-debugadapter": "^1.29.0",
    "vscode-debugprotocol": "^1.29.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.66",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "activationEvents": [
    "onDebug"
  ]
}
