{
  "publisher": "ApamaCommunity",
  "name": "apama-extensions",
  "displayName": "apama-extensions",
  "description": "Support for writing Apama Streaming Analytics applications in EPL",
  "version": "2.1.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ApamaCommunity/apama-vscode-extensions"
  },
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "epl",
    "mon",
    "Cumulocity",
    "Apama",
    "MonitorScript"
  ],
  "qna": "https://techcommunity.cumulocity.com/tag/streaming-analytics-apama",
  "activationEvents": [],
  "main": "./dist/extension",
  "contributes": {
    "configuration": {
      "title": "Apama",
      "properties": {
        "apama.apamaHome": {
          "type": "string",
          "default": "",
          "markdownDescription": "The location where Apama is installed (the `Apama/` directory). \n\nMust be a 'dev' package (or a 'builder' image) of Apama that includes tools such as `bin/apama_project`. If not specified, the default install location will be used.",
          "scope": "machine-overridable"
        },
        "apama.debugPort": {
          "type": "integer",
          "default": 15904,
          "description": "Port for correlator debugging."
        },
        "apama.debugHost": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Host for correlator debugging."
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "apama",
        "required": [
          "port"
        ],
        "properties": {
          "port": {
            "type": "integer",
            "description": "Correlator port number"
          },
          "task": {
            "type": "string",
            "description": "task name"
          },
          "cmdline": {
            "type": "string",
            "description": "platform dependent cmdline - set automatically"
          },
          "project": {
            "type": "string",
            "description": "deployed project to run"
          }
        }
      }
    ],
    "languages": [
      {
        "id": "apamaepl",
        "extensions": [
          ".mon",
          ".epl",
          ".evt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "apamaepl",
        "scopeName": "source.epl",
        "path": "./epl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "apamaepl",
        "path": "./snippets.json"
      }
    ],
    "commands": [
      {
        "command": "apama.apamaToolCreateProject",
        "title": "Create Project",
        "category": "Apama",
        "icon": {
          "light": "resources/light/folder.svg",
          "dark": "resources/dark/folder.svg"
        }
      },
      {
        "command": "apama.refreshProjects",
        "title": "Refresh",
        "category": "Apama",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "apama.apamaToolAddBundles",
        "title": "Add Bundle",
        "category": "Apama",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "apama.apamaToolRemoveBundle",
        "title": "Remove Bundle",
        "category": "Apama",
        "icon": {
          "light": "resources/action-close.svg",
          "dark": "resources/action-close-dark.svg"
        }
      },
      {
        "command": "apama.engine_inject",
        "category": "Apama",
        "title": "correlator: engine inject"
      },
      {
        "command": "apama.engine_send",
        "category": "Apama",
        "title": "correlator: engine send"
      },
      {
        "command": "apama.engine_delete",
        "category": "Apama",
        "title": "correlator: engine delete"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .mon",
          "command": "apama.engine_inject"
        },
        {
          "when": "resourceExtname == .evt",
          "command": "apama.engine_send"
        }
      ],
      "view/title": [
        {
          "when": "view == apamaProjects",
          "command": "apama.apamaToolCreateProject",
          "group": "navigation"
        },
        {
          "command": "apama.refreshProjects",
          "when": "view == apamaProjects",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "when": "view == apamaProjects && viewItem == project",
          "command": "apama.apamaToolAddBundles",
          "group": "inline@2"
        },
        {
          "when": "view == apamaProjects && viewItem == bundle",
          "command": "apama.apamaToolRemoveBundle",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "apama.apamaToolAddBundles",
          "when": "false"
        },
        {
          "command": "apama.apamaToolRemoveBundle",
          "when": "false"
        },
        {
          "command": "apama.engine_inject",
          "when": "false"
        },
        {
          "command": "apama.refreshProjects",
          "when": "false"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "apamaProjects",
          "name": "Apama Projects"
        }
      ]
    },
    "breakpoints": [
      {
        "language": "apamaepl"
      }
    ],
    "debuggers": [
      {
        "type": "apama",
        "label": "apama",
        "configurationAttributes": {
          "launch": {
            "properties": {
              "correlator": {
                "type": "object",
                "properties": {
                  "port": {
                    "type": "number",
                    "description": "The port on which to run the correlator",
                    "default": 15904
                  },
                  "host": {
                    "type": "string",
                    "description": "the host on which the debug correlator will run",
                    "default": "127.0.0.1"
                  },
                  "args": {
                    "type": "array",
                    "description": "List of arguments and values to provide to the correlator",
                    "default": [
                      "-g"
                    ]
                  }
                }
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node esbuild.js --production && npm run lint",
    "lint": "eslint src",
    "build": "npm run esbuild && npm run lint",
    "esbuild": "node esbuild.js",
    "esbuild-watch": "node esbuild.js --watch",
    "compile-tests": "tsc -p . --outDir out",
    "pretest": "npm run compile-tests",
    "test": "vscode-test",
    "deploy": "vsce publish"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.67.0",
    "@vscode/debugprotocol": "^1.67.0",
    "@xmldom/xmldom": "^0.8.10",
    "axios": "^1.7.7",
    "glob": "^11.0.0",
    "neverthrow": "^8.2.0",
    "semver": "^7.6.3",
    "shelljs": "^0.8.5",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "xpath": "0.0.34"
  },
  "devDependencies": {
    "@types/node": "^22.6.1",
    "@types/semver": "^7.5.8",
    "@types/shelljs": "^0.8.8",
    "@types/vscode": "^1.88.0",
    "@types/xmldom": "^0.1.34",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.11.1",
    "prettier": "3.5.3",
    "typescript": "^5.6.2"
  }
}
