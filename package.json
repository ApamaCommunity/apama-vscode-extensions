{
  "publisher": "cariboujohn",
  "name": "apama-extensions",
  "displayName": "apama-extensions",
  "description": "A language server for EPL applications",
  "version": "0.9.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/CaribouJohn/vscode-apama-extensions"
  },
  "engines": {
    "vscode": "^1.32.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:epl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "epl",
        "extensions": [
          ".mon",
          ".epl",
          ".evt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "epl",
        "scopeName": "source.epl",
        "path": "./epl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "epl",
        "path": "./src/snippets/epl.json"
      }
    ],
    "commands": [],
    "menus": {
      "explorer/context": [],
      "view/title": [],
      "view/item/context": []
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.17.15",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.5",
    "vscode": "^1.1.36",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "@types/glob": "^7.1.1",
    "@types/js-yaml": "^3.12.2",
    "@types/request": "^2.48.4",
    "@types/request-promise-native": "^1.0.17",
    "@types/shelljs": "^0.8.6",
    "@types/xmldom": "^0.1.29",
    "glob": "^7.1.6",
    "js-yaml": "^3.13.1",
    "jsonschema": "^1.2.5",
    "request-promise-native": "^1.0.8",
    "shelljs": "^0.8.3",
    "vscode-debugadapter": "^1.38.0",
    "vscode-languageclient": "^5.2.1",
    "vscode-languageserver": "^5.3.0-next.10",
    "xmldom": "^0.1.31",
    "xpath": "0.0.27"
  }
}
