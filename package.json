{
  "name": "apama-language-server",
  "displayName": "apama-language-server",
  "description": "A language server for EPL applications",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.32.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:epl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "epl",
        "extensions": [
          ".mon",
          ".epl",
          ".evt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "epl",
        "scopeName": "source.epl",
        "path": "./src/syntaxes/epl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "epl",
        "path": "./src/snippets/epl.json"
      }
    ],
    "commands": [],
    "menus": {
      "explorer/context": [],
      "view/title": [],
      "view/item/context": []
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.14.21",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3",
    "vscode": "^1.1.36"
  },
  "dependencies": {
    "@types/glob": "^7.1.1",
    "@types/js-yaml": "^3.12.0",
    "@types/request": "^2.48.3",
    "@types/request-promise-native": "^1.0.17",
    "@types/shelljs": "^0.8.5",
    "@types/xmldom": "^0.1.29",
    "glob": "^7.1.3",
    "js-yaml": "^3.13.1",
    "jsonschema": "^1.2.4",
    "request-promise-native": "^1.0.7",
    "shelljs": "^0.8.3",
    "vscode-debugadapter": "^1.37.1",
    "vscode-languageclient": "^5.2.1",
    "vscode-languageserver": "^5.3.0-next.10",
    "xmldom": "^0.1.27",
    "xpath": "0.0.27"
  }
}
